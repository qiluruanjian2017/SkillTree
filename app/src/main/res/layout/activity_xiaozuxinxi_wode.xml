<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xiaozuxinxi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="zhu.skilltree.UI.MyActivity.xiaozuxinxi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/bg_top_bar"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/xinix_wode_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.10"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="?android:attr/actionModeCloseDrawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="小组信息"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bar"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/xinix_wode_image"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/zu" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="小组名称：" />

                <TextView
                    android:id="@+id/xinix_wode_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是一个小组名称"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="小组标签：" />

                <TextView
                    android:id="@+id/xinix_wode_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="这是小组的标签"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="小组介绍：" />

        <TextView
            android:id="@+id/xinix_wode_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:text="这是小组的介绍啊。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。。" />

        <TextView
            android:id="@+id/xinix_wode_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:text="小组成员：5人(大概吧）"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <ListView
            android:id="@+id/list_wode_chengyuan"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/button_his"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bmob_update_button_cancel_bg_tap"
            android:text="历史记录" />

    </LinearLayout>
</RelativeLayout>
