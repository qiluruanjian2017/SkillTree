<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/head"
            android:padding="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/my_head" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_toRightOf="@id/head"
            android:gravity="center_vertical|left"
            android:text="用户名"
            android:textSize="25sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />


    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_class"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_my_class"
            android:layout_width="35dp"
            android:layout_height="35dp"

            android:padding="5dp"
            android:src="@drawable/my_selected_classes" />

        <TextView
            android:id="@+id/txt_my_class"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   我的课程"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_activity"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_option"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/my_activity" />

        <TextView
            android:id="@+id/txt_option"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   我的活动"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_arrow"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_group"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:src="@drawable/my_group" />

        <TextView

            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   我的小组"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_info"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/my_info" />

        <TextView

            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   我的消息"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_settings"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/my_settings" />

        <TextView

            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   设置"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

    <LinearLayout
        android:id="@+id/ll_my_about"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="5dp"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:src="@drawable/my_about" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|left"
            android:text="   关于……"
            android:textColor="@color/text_dark"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|right"
            android:text=">"
            android:textColor="@color/text_gray"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/text_gray" />

</LinearLayout>
